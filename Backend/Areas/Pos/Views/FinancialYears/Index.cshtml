@model IEnumerable<Domain.POS.FinancialYear>

@{
    ViewBag.Title = "Años Fiscales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "FinancialYears", new { area = "Pos"   })"> <span class="fa fa-plus"></span> Registrar Nuevo Año Fiscal </a>


</p>
<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndingDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndingDate)
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "FinancialYears", new { area = "Pos" , id=@item.FinancialYearId })"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-info" href="@Url.Action("Details", "FinancialYears", new { area = "Pos" , id=@item.FinancialYearId })"> <span class="fa fa-info"></span> Detalle </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "FinancialYears", new { area = "Pos" , id=@item.FinancialYearId })" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}

