@model IEnumerable<Domain.POS.Product>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a class="btn btn-success" href="@Url.Action("OptionsList", "Users", new { area = "Pos" , id=@ViewBag.PatientId })">
        <span class="fa fa-reply"> Volver a Atras</span>
    </a>
    <a class="btn btn-primary" href="@Url.Action("Create", "Products", new {area = "Pos"})"> <span class="fa fa-plus"></span> Registrar Nuevo Producto/Servicio </a>


</p>
<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th> Tipo</th>
                <th>
                    Marca
                </th>
                <th>
                    Categoria
                </th>

                <th>
                    Codigo
                </th>
                <th>
                    Nombre
                </th>


                <th>
                    Precio de Compra
                </th>
                <th>
                    Precio
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BarCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BuyPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellPrice)
                    </td>

                    <td>

                        <a class="btn btn-warning" href="@Url.Action("Edit", "Products", new {area = "Pos", id = @item.ProductId})"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Products", new {area = "Pos", id = @item.ProductId})" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $('table').DataTable();
        });
    </script>

}

