@model IEnumerable<Domain.MED.Area>

<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Nombre</th>
                <th></th>
                @*<th># Expediente</th>
                    <th>Cedula</th>
                    <th>Nombre</th>
                    <th>Apellido</th>

                    <th>Email</th>
                    <th>Tel</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Areas", new {area = "Medicals", id = @item.AreaId})"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-info" href="@Url.Action("Details", "Areas", new {area = "Medicals", id = @item.AreaId})"> <span class="fa fa-info"></span> Detalles de: Camas, Habitaciones y Espacios </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Areas", new {area = "Medicals", id = @item.AreaId})" onclick="return confirm('Esta seguro que desea eliminar este registro?')"> <span class="fa fa-trash-o"></span> Eliminar </a>
                    </td>


                    @*<td>
                            @Html.DisplayFor(modelItem => item.Person.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Person.LastName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Person.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Person.Tel)
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>